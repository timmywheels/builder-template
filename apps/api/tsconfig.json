{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "composite": true,
    "sourceMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/app/*": ["src/modules/*"],
      "@/config/*": ["./src/config/*"],
      "@/types/*": ["./src/types/*"]
    }
  },
  "include": ["./src/**/*"],
  "compileOnSave": true
}
